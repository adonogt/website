---
const SITE_TITLE = "グスターボ";
const {
  title = "",
  description = "embedded systems engineer driven by simplicity, respect, and curiosity",
} = Astro.props;

// título completo no formato: グスターボ - nome
const fullTitle = title ? `${SITE_TITLE} - ${title}` : SITE_TITLE;

const path = Astro.url.pathname;
const isCurrent = (href: string) =>
  path === href || (href !== "/" && path.startsWith(href))
    ? 'aria-current="page"'
    : "";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#ffffff" />

    <!-- OG / Twitter -->
    <meta property="og:site_name" content={SITE_TITLE} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/favicon.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/favicon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+JP:wght@300;400;500&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/styles.css" />
  </head>

  <body>
    <nav>
      <ul>
        <li><a href="/" {...(isCurrent("/") ? { "aria-current": "page" } : {})}>home</a></li>
        <li><a href="/projects" {...(isCurrent("/projects") ? { "aria-current": "page" } : {})}>works</a></li>
        <li><a href="/blog" {...(isCurrent("/blog") ? { "aria-current": "page" } : {})}>blog</a></li>
        <li><a href="/uses" {...(isCurrent("/uses") ? { "aria-current": "page" } : {})}>uses</a></li>
        <li><a href="/about" {...(isCurrent("/about") ? { "aria-current": "page" } : {})}>about</a></li>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <p>グスターボ © 2025</p>
    </footer>
  </body>
</html>
